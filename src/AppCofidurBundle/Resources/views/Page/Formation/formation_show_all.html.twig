{% extends 'AppCofidurBundle::layout.html.twig' %}

{% block body %}

<table>
	<tr>
		<th> ID </th>
		<th> NOM </th>
		<th> TYPE </th>
		<th> OBJECTIF </th>
		<th> MOYENS PEDAGOGIQUES </th>
		<th> MOYENS MATERIELS </th>
		<th> CRITICITE </th>
	</tr>
{% for formation in formations %}
	<tr>
		<td> {{ formation.id }} </td>
		<td> <a href="{{ path('AppCofidurBundle_formation_show', {'idForm': formation.id}) }}">{{ formation.name }}</a> </td>
		<td> {{ formation.type }} </td>
		<td> {{ formation.goal }} </td>
		<td> {{ formation.teachingAids }} </td>
		<td> {{ formation.placesMaterialRessources }} </td>
		<td> {{ formation.criticality }} </td>
		<td> <a href="{{ path('AppCofidurBundle_formation_edit', {'idForm': formation.id}) }}">Editer</a>
		<td> <a href="{{ path('AppCofidurBundle_formation_delete', {'idForm': formation.id}) }}">Supprimer</a>
	</tr>
{% endfor %}
</table>

<br/>
<a href="{{ path('AppCofidurBundle_formation_add') }}">Ajouter une formation</a>

{% endblock %}
